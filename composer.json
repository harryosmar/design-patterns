{
    "name": "harry/sample-01",
    "authors": [
        {
            "name": "Harry Sitohang",
            "email": "harry@olx.co.id"
        }
    ],
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "phpdocumentor/phpdocumentor": "2.9.0",
        "phpunit/phpunit": "^7.5",
        "mockery/mockery": "^1.2",
        "jms/serializer": "1.7",
        "jms/metadata": "~1.1"
    },
    "autoload": {
        "psr-4": {
            "Sample\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sample\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit -c phpunit.xml --coverage-text --coverage-clover=coverage.clover --debug",
        "doc": "./vendor/bin/phpdoc"
    }
}
